# Backend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy backend source
COPY snack-request-backend/ ./snack-request-backend/

# Expose backend port
EXPOSE 3000

# Set working directory to backend
WORKDIR /app/snack-request-backend

# Start the server
CMD ["node", "server.js"]
